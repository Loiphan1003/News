@model News.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80dvh;">
    <div class="border rounded h-fit py-4 d-flex flex-column align-items-center" style="width: 500px;">
        <h1 class="text-center">Login</h1>

        <form class="w-75 was-validated" asp-controller="Auth" asp-action="Login" method="post">

            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label fw-bold">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="name@gmail.com" required>
                <div class="valid-feedback">Email Correct</div>
                <div class="invalid-feedback">Invalid Email</div>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label fw-bold">Password</label>
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="password" required>
                <div class="invalid-feedback">Password is not empty</div>
            </div>

            <span class="text-danger">
                @Html.ValidationMessage("error")
            </span>

            <div class="mt-3">
                <button class="btn btn-primary w-100" type="submit">Login</button>
            </div>
        </form>

        <div class="mt-2 d-flex flex-row gap-1">
            <p class="m-0">Don't have account !</p>
            <a asp-controller="Auth" asp-action="Register" class="fw-bold text-black text-decoration-none">Register</a>
        </div>

        <p class="my-2 m-0">Or login with</p>

        <a asp-controller="Auth" asp-action="GoogleLogin"
            class="mt-2 px-3 py-2 text-decoration-none  cursor-pointer d-flex rounded flex-row justify-content-center gap-3 bg-gray w-75">
            <i class="bi bi-google text-black"></i>
            <p class="m-0 text-black">Login with google</p>
        </a>
    </div>
</div>