@{
    ViewData["Title"] = "Send Post";
}

@await Html.PartialAsync("Components/_ProfileHeader")

<div class="mt-4">
    <div class="d-flex flex-xl-row flex-column gap-4">
        <div class="w-sm-75 w-100">
            <div class="d-flex flex-xl-row flex-column d-flex gap-4 fw-bold">
                <div class="w-md-50 w-100">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Title">
                </div>

                <div class="w-md-50 w-100">
                    <label for="tag" class="form-label">Tag</label>
                    <input type="text" class="form-control" id="tag" placeholder="Tag">
                </div>
            </div>

            <div class="mt-3">
                <label class="mb-2 fw-bold" for="">Content</label>
                <div id="editor"></div>
            </div>
        </div>

        <div class="w-sm-25">
            <div>
                <label class="fw-bold" for="">Add Image</label>
                <div class="mt-2 p-2 bg-gray rounded" style="height: 360px;">
                    <div class="border rounded d-flex w-100 h-100 justify-content-center align-items-center">
                        <div class="h-fit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="94" height="94" fill="currentColor"
                                class="bi bi-image" viewBox="0 0 16 16">
                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                <path
                                    d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1z" />
                            </svg>

                            <div class="mt-3 d-flex flex-row rounded align-items-center border py-2 px-3">
                                <i class="bi bi-plus"></i>
                                <p class="m-0">Select</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex  flex-nowrap ">
                <button class="py-2 px-3 d-flex flex-row align-items-center gap-2 rounded border">
                    <i class="bi bi-floppy"></i>
                    <p class="m-0">Draft</p>
                </button>

                <button class="py-2 px-3 d-flex flex-row align-items-center gap-2 rounded border">
                    <i class="bi bi-eye"></i>
                    <p class="m-0">Preview</p>
                </button>

                <button class="py-2 px-3 d-flex flex-row align-items-center gap-2 rounded border">
                    <i class="bi bi-send"></i>
                    <p class="m-0">Public</p>
                </button>
            </div>
        </div>
    </div>
</div>